<h1> Welcome to images index!!! </h1>
<%= link_to "Submit a new image!",  new_image_path %>
<br>

<% @images.each do |image|%>
    <div class="image-block">
        <div class="image-content"><%= image_tag(image.link, class: 'image-max-width') %></div>
        <div class="image-tag">
            <ul>
            <% image.tag_list.each do |tag| %>
                <li><%= tag %></li>
            <% end %>
            </ul>
        </div>
    </div>
<% end %>
