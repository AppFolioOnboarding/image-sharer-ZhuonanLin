<% if flash[:notice].present? %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>
<%= link_to 'Delete Image', image_path(@image.id),  method: :delete, data: { confirm: 'Are you sure you want to delete?' } %>
<ul>
  <% @image.tag_list.each do |tag| %>
    <li><%= tag %></li>
  <% end %>
</ul>
<%= image_tag(@image.link, class: 'image-max-width') %>
